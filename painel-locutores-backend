const express = require("express");
const cors = require("cors");
const fetch = require("node-fetch");

const SUPABASE_FUNCTION_URL = "https://hvijbammcsnqkjkjiaaa.supabase.co/functions/v1/generate-audio";
const API_KEY = "SUA_ANON_PUBLIC_KEY_AQUI"; // Copie do painel Supabase: Settings > API > anon public

const app = express();
app.use(cors());
app.use(express.json());

app.post("/generate-audio", async (req, res) => {
  try {
    const response = await fetch(SUPABASE_FUNCTION_URL, {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
        "apikey": API_KEY
      },
      body: JSON.stringify(req.body)
    });

    const result = await response.json();
    res.status(response.status).json(result);
  } catch (err) {
    res.status(500).json({ error: String(err) });
  }
});

app.get("/", (req, res) => {
  res.send("Proxy up and running!");
});

const PORT = process.env.PORT || 3000;
app.listen(PORT, () => {
  console.log("Proxy listening on port", PORT);
});
